<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#876842"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"

    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/rollResult1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer: "
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/rollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/die3Image"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:onClick="rollDice"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:text="Play" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/die4Image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:onClick = "getStats"
        android:text="Stats"
        />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:text="Help" />

    <ImageView
        android:id="@+id/die1Image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rollResult1"
        android:layout_marginTop="5dp"
        android:src="@drawable/die_1" />

    <ImageView
        android:id="@+id/die2Image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/rollResult1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/die_1" />


    <TextView
        android:id="@+id/rollResult2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/die1Image"
        android:layout_marginTop="15dp"
        android:text="Player: "
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/die3Image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rollResult2"
        android:layout_marginTop="5dp"
        android:src="@drawable/die_1" />

    <ImageView
        android:id="@+id/die4Image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/rollResult2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/die_1"
        />



</RelativeLayout>